<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView131"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginEnd="111dp"
        android:background="#4A858B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView131"
        app:layout_constraintEnd_toEndOf="@+id/textView131"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView131"
        app:srcCompat="@drawable/ic_baseline_menu_24" />

    <TextView
        android:id="@+id/textView132"
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:background="#B9D5D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView131" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUsuMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/pessoa"
        app:layout_constraintBottom_toBottomOf="@+id/textView132"
        app:layout_constraintEnd_toEndOf="@+id/textView132"
        app:layout_constraintStart_toStartOf="@+id/textView132"
        app:layout_constraintTop_toTopOf="@+id/textView132" />

</androidx.constraintlayout.widget.ConstraintLayout>