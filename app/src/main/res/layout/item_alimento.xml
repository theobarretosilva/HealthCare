<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tituloVacinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/box_alimento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomeAlimentoCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/urbanist"
        android:text="Banana"
        android:textColor="#1E232C"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tituloVacinas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tituloVacinas"
        app:layout_constraintTop_toTopOf="@+id/tituloVacinas" />

    <TextView
        android:id="@+id/gAlimentoCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/urbanist"
        android:text="150 g"
        android:textColor="#1E232C"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/tituloVacinas"
        app:layout_constraintEnd_toEndOf="@+id/tituloVacinas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tituloVacinas" />

    <TextView
        android:id="@+id/kcalAlimentoCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="134 kcal"
        android:textSize="18sp"
        android:textColor="#1E232C"
        android:fontFamily="@font/urbanist"
        app:layout_constraintBottom_toBottomOf="@+id/tituloVacinas"
        app:layout_constraintEnd_toEndOf="@+id/tituloVacinas"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tituloVacinas"
        app:layout_constraintTop_toTopOf="@+id/tituloVacinas" />
</androidx.constraintlayout.widget.ConstraintLayout>